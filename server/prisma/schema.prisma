generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String
  displayName  String?
  role         String   @default("admin")
  gatewayToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  todos               Todo[]
  emailTags           EmailTag[]
  emailSettings       EmailSettings?
  crmSettings         CrmSettings?
  oauthTokens         OAuthToken[]
  oauthCredentials    OAuthCredential[]
  notifications       Notification[]
  onboardingProgress  OnboardingProgress?
  draftReplies        DraftReply[]
  uploadedFiles       UploadedFile[]
  invoices            Invoice[]
  pdfSessions         PdfSession[]
  pdfForms            PdfForm[]
  automationSettings  AutomationSettings?
  processedEmails     ProcessedEmail[]
  emailContents       EmailContent[]
  drafts              Draft[]
  proxyApiToken       ProxyApiToken?
  proxyProvisionStatus ProxyProvisionStatus?
  schedulePreferences  SchedulePreferences?
  savedAgendas         SavedAgenda[]
  workflows            Workflow[]
}

model Todo {
  id               String    @id @default(uuid())
  userId           String
  title            String
  description      String?
  priority         String    @default("medium") // high, medium, low
  dueDate          DateTime?
  estimatedMinutes Int?      // estimated time in minutes for AI scheduling
  completed        Boolean   @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailTag {
  id            String  @id @default(uuid())
  userId        String
  name          String
  color         String  @default("#00d4ff")
  description   String?
  criteria      String? // JSON string with classification rules
  isSystem      Boolean @default(false)
  sortingIntent String? // e.g. "sales-leads", "client-requests", "invoices"
  autoDraft     Boolean @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
}

model EmailSettings {
  id             String  @id @default(uuid())
  userId         String  @unique
  autoTagEnabled Boolean @default(false)
  autoDraftEnabled Boolean @default(false)
  draftTone      String  @default("professional")
  signature      String?
  draftRules     String? // JSON string with draft rules

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CrmSettings {
  id            String  @id @default(uuid())
  userId        String  @unique
  spreadsheetId String?
  apolloApiKey  String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model OAuthToken {
  id           String   @id @default(uuid())
  userId       String
  provider     String   // google, microsoft
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  scopes       String?  // comma-separated scopes

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
}

model OAuthCredential {
  id           String   @id @default(uuid())
  userId       String
  provider     String   // "google" or "microsoft"
  clientId     String
  clientSecret String   // AES-256-GCM encrypted at application layer
  redirectUri  String?  // Optional per-user override; falls back to server default
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId, provider])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String   // info, warning, error, success
  title     String
  body      String?
  read      Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model OnboardingProgress {
  id        String  @id @default(uuid())
  userId    String  @unique
  step      Int     @default(0)
  completed Boolean @default(false)
  data      String  @default("{}") // JSON blob for wizard state

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model DraftReply {
  id           String   @id @default(uuid())
  userId       String
  emailId      String   // Provider message ID (Gmail/Outlook)
  emailSubject String
  emailFrom    String
  emailSnippet String?
  tagId        String?  // EmailTag that triggered the draft
  draftBody    String   // AI-generated reply text
  tone         String   @default("professional")
  status       String   @default("pending") // pending, approved, sent, discarded
  provider     String   // google, microsoft
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, emailId])
}

model UploadedFile {
  id          String   @id @default(uuid())
  userId      String
  filename    String
  mimeType    String
  sizeBytes   Int
  content     String   // base64-encoded file content
  textContent String?  // Extracted text (for PDFs, docs)
  purpose     String   // "invoice", "pdf-analyze", "compose-attachment"
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Invoice {
  id            String   @id @default(uuid())
  userId        String
  source        String   // "upload" or "email"
  sourceId      String?  // emailId if from email, uploadedFileId if from upload
  vendor        String?
  invoiceNumber String?
  amount        Float?
  currency      String?  @default("USD")
  dueDate       String?
  status        String   @default("pending") // pending, paid, overdue, disputed
  lineItems     String?  // JSON array of { description, quantity, unitPrice, total }
  rawText       String?  // Full extracted text
  summary       String?  // AI-generated summary
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PdfSession {
  id        String   @id @default(uuid())
  userId    String
  fileId    String   // Reference to UploadedFile
  fileName  String
  messages  String   @default("[]") // JSON array of { role, content, timestamp }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PdfForm {
  id          String   @id @default(uuid())
  userId      String
  title       String
  description String?
  fields      String   // JSON array of { label, type, required, options? }
  prompt      String   // Original prompt that generated the form
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AutomationSettings {
  id               String   @id @default(uuid())
  userId           String   @unique
  provider         String   // "openai", "anthropic", "google"
  modelId          String   // e.g. "gpt-4o-mini", "claude-haiku-4-5", "gemini-2.0-flash-lite"
  apiKey           String   // AES-256-GCM encrypted
  rateLimitPerMin  Int      @default(20)
  rateLimitPerHour Int      @default(200)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Draft {
  id        String   @id @default(uuid())
  userId    String
  type      String   @default("email") // "email" or "document"
  to        String?
  subject   String?
  body      String   @default("")
  context   String?  // Additional context (for document drafts)
  provider  String?  // "google" or "microsoft" (for email drafts)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ProcessedEmail {
  id          String   @id @default(uuid())
  userId      String
  emailId     String   // Provider message ID
  provider    String   // "google" or "microsoft"
  summary     String?  // AI-generated one-sentence summary
  tagId       String?  // Assigned EmailTag ID
  tagName     String?  // Denormalized tag name for fast reads
  processedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, emailId])
}

model EmailContent {
  id        String   @id @default(uuid())
  userId    String
  emailId   String   // Provider message ID
  provider  String
  subject   String
  from      String
  to        String?
  date      String
  body      String   // Full email body text
  snippet   String?
  read      Boolean  @default(false)
  fetchedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, emailId])
}

model ProxyApiToken {
  id        String   @id @default(uuid())
  userId    String   @unique
  tokenHash String
  label     String   @default("OpenClaw Gmail Proxy")
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ProxyProvisionStatus {
  id             String   @id @default(uuid())
  userId         String   @unique
  status         String   @default("pending") // pending, success, failed
  errorCode      String?  // gateway_disconnected, google_not_connected, env_write_failed, skill_create_failed
  errorMessage   String?
  targetProxyUrl String?
  lastAttemptAt  DateTime?
  lastSuccessAt  DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SchedulePreferences {
  id                String   @id @default(uuid())
  userId            String   @unique
  wakeTime          String   @default("07:00")
  sleepTime         String   @default("22:00")
  workStartTime     String   @default("09:00")
  workEndTime       String   @default("17:00")
  lunchStart        String   @default("12:00")
  lunchDuration     Int      @default(60)
  focusBlockMinutes Int      @default(90)
  breakMinutes      Int      @default(15)
  travelBuffer      Int      @default(15)
  midDayActivity    String   @default("")
  midDayStart       String   @default("14:00")
  midDayDuration    Int      @default(30)
  preferMorning     Boolean  @default(true)
  notes             String   @default("")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Workflow {
  id                     String   @id @default(uuid())
  userId                 String
  templateId             String   // e.g. "github-triage" or "custom-my-slug"
  name                   String
  status                 String   @default("setting-up") // setting-up, active, paused, error
  schedule               String   // JSON: { kind, expr?, intervalMs?, tz? }
  customTrigger          String?
  additionalInstructions String   @default("")
  cronJobId              String?
  cronJobName            String
  installedSkills        String   @default("[]") // JSON array
  storedCredentials      String   @default("[]") // JSON array
  generatedPrompt        String?  // For custom workflows
  errorMessage           String?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SavedAgenda {
  id             String   @id @default(uuid())
  userId         String
  date           String   // "YYYY-MM-DD" local date the agenda is for
  items          String   // JSON-serialized AgendaItem[] array
  raw            String?  // Raw AI text if JSON parsing failed
  completedItems String   @default("[]") // JSON array of completed item indices
  eventCount     Int      @default(0)
  taskCount      Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}
